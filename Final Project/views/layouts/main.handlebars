<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Matt Brand and Morgan Brenner">

    <title>Feed The Freshmen</title>

    <!-- Bootstrap core CSS -->
    <link href="../../public/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="../../public/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="../../public/css/agency.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">Feed The Freshmen</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#map">Map</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#calendar">Calendar</a>
                    </li>
                    <li class="nav-item">
                        {{#if loggedIn}}
                        <a class="nav-link js-scroll-trigger" id="nameDisplayHolder" href="#account">{{username}}</a>
                        {{else}}
                        <a class="nav-link js-scroll-trigger" id="nameDisplayHolder" href="#account">Login / Create Account</a>
                        {{/if}}
                    </li>
                    {{#if loggedIn}}
                    <li class="nav-item">
                        <a class="nav-link" id="nameDisplayHolder" href="/logout">Logout</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>

    <!-- map -->
    <section id="map">
        <div>
            {{#if loggedIn}}
            <div class="notification-box" id="howeMarker" style="transform: translate(38vw, -3vh);">
                <div class="rectangle">
                    <p class="notification">0</p>
                </div>
                <div class="triangle-down"></div>
            </div>
            <div class="notification-box" id="lawnMarker" style="transform: translate(37vw, 16vh);">
                <div class="rectangle">
                    <p class="notification">0</p>
                </div>
                <div class="triangle-down"></div>
            </div>
            <div class="notification-box" id="babbioMarker" style="transform: translate(49vw, 31vh);">
                <div class="rectangle">
                    <p class="notification">0</p>
                </div>
                <div class="triangle-down"></div>
            </div>
            <div class="notification-box" id="haydenMarker" style="transform: translate(44vw, 18vh);">
                <div class="rectangle">
                    <p class="notification">0</p>
                </div>
                <div class="triangle-down"></div>
            </div>
            {{/if}}
            <img src="../../public/img/stevensMap.jpg" alt="Stevens Map" id="mainMap">
        </div>
        {{#if loggedIn}}
        <form id="eventForm">
            <fieldset>
                <legend>Add An Event</legend>
                Title:<br>
                <input type="text" name="title">
                <br> Description:
                <br>
                <input type="text" name="description">
                <br> Date:
                <br>
                <input type="date" name="date">
                <br> Time:
                <br>
                <input type="time" value="00:00" name="time">
                <br> Location:
                <br>
                <input type="radio" name="location" value="Howe" checked> Howe<br>
                <input type="radio" name="location" value="Babbio"> Babbio<br>
                <input type="radio" name="location" value="Hayden Lounge"> Hayden Lounge<br>
                <input type="radio" name="location" value="The Lawn"> The Lawn<br>
                <br><br>
                <input type="submit" value="Submit">
            </fieldset>
        </form>
        {{/if}}
    </section>
    {{#if loggedIn}}
    <!-- Calendar -->
    <section class="bg-light" id="calendar">
        <div class="container">
            <table id="eventList">
                <th>Title</th>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
            </table>
        </div>
    </section>
    {{/if}} {{#unless loggedIn}}
    <!-- Account -->
    <section id="account">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Login Or Create An Account</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form id="loginForm" name="loginForm" novalidate="novalidate">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input class="form-control" id="loginUsername" type="text" name="username" placeholder="Username" required="required" data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="loginPassword" type="password" name="password" placeholder="Password" required="required"
                                        data-validation-required-message="Please enter your password.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button id="loginButton" class="btn btn-primary btn-xl text-uppercase" id='loginButton' type="submit">Login</button>
                            </div>
                        </div>
                    </form>

                    <form id="createAccountForm" name="createAccountForm" novalidate="novalidate">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input class="form-control" id="CAusername" type="text" name="username" placeholder="Username" required="required" data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="CApassword" type="password" name="password" placeholder="Password" required="required" data-validation-required-message="Please enter your password.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="CAemail" type="email" name="emailAddress" placeholder="Email" required="required" data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button id="createAccountButton" class="btn btn-primary btn-xl text-uppercase" id='createAccountButton' type="submit">Create
                                    Account
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    {{/unless}}

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright">Copyright &copy; MB + MB 2018</span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="../../public/vendor/jquery/jquery.min.js"></script>
    <script src="../../public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="../../public/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

    <!-- Login / Create Account form JavaScript -->
    <script src="../../public/js/accountForm.js"></script>

    <!-- Custom scripts for this template -->
    <script src="../../public/js/agency.js"></script>

</body>

</html>